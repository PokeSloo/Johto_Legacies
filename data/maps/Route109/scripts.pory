const BLACKBELT_ID_1 = 23
const BLACKBELT_ID_2 = 24
const BLACKBELT_ID_3 = 25

mapscripts Route109_MapScripts {}

script Route109_EventScript_FarmSign {
	msgbox(format("Moomoo Farm\nEnjoy Our Fresh and Tasty Milk"), MSGBOX_SIGN)
	end
}

script Route109_EventScript_Trigger {
	lock
	if (flag(FLAG_HIDE_RT39_BOULDERS)) {
		release
		end
	}
	applymovement (BLACKBELT_ID_1, Route109_Movement_BlackBelt_Approach)
	applymovement (BLACKBELT_ID_2, Route109_Movement_BlackBelt_Approach)
	applymovement (BLACKBELT_ID_3, Route109_Movement_BlackBelt_ApproachAround)
	waitmovement (0)
	msgbox(format("Hey, nice work pushing those boulders kid!\pDon't worry, we'll take it from here."))
	waitmessage
	closemessage
	fadescreen (FADE_TO_BLACK)
	removeobject(BLACKBELT_ID_1)
	removeobject(BLACKBELT_ID_2)
	removeobject(BLACKBELT_ID_3)
	removeobject(19)
	removeobject(20)
	removeobject(21)
	removeobject(22)
	setflag(FLAG_HIDE_RT39_BOULDERS)
	delay(30)
	waitse
	playse(SE_M_STRENGTH)
	waitse
	playse(SE_M_STRENGTH)
	waitse
	playse(SE_M_STRENGTH)
	waitse
	playse(SE_M_STRENGTH)
	waitse
	playse(SE_M_STRENGTH)
	waitse
	delay(30)
	fadescreen (FADE_FROM_BLACK)
	release
	end
}

movement Route109_Movement_BlackBelt_Approach {
	walk_up * 7
	walk_in_place_right
}

movement Route109_Movement_BlackBelt_ApproachAround {
	walk_up * 9
	walk_right * 2
}

