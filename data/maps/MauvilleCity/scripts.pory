    msgbox(format("BARRIER STATION TO BELL TOWER\nNo Trespassing by the Unworthy."), MSGBOX_SIGN)
    end
}

script MauvilleCity_EventScript_DanceTheaterSign {
    msgbox(format("ECRUTEAK DANCE THEATER"), MSGBOX_SIGN)
