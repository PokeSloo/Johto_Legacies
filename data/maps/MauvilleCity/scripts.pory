    playbgm (MUS_RG_ROCKET_HIDEOUT, TRUE)
    addvar (VAR_ECRUTEAK_STATE, 1)
    warpsilent (MAP_MAGMA_HIDEOUT_4F, 10, 9)
    waitstate
    release
    end
}

script MauvilleCity_OnFrame_Later {
    lock
    delay (60)
    waitse
    playmoncry (SPECIES_LUGIA, CRY_MODE_NORMAL)
    waitmoncry
    playse (SE_PIN)
    applymovement (10, MauvilleCity_Movement_ExclamationLookLeft)
    applymovement (11, MauvilleCity_Movement_ExclamationLookLeft)
    applymovement (12, MauvilleCity_Movement_ExclamationLookLeft)
	waitmovement (0)
    waitse
    fadeoutbgm (1)
    addobject (13)
    applymovement (13, MauvilleCity_Movement_LugiaApproach)
	waitmovement (0)
    delay (30)
    waitse
    playmoncry (SPECIES_HO_OH, CRY_MODE_NORMAL)
    applymovement (10, MauvilleCity_Movement_HoohFlapLeft)
	waitmovement (0)
    waitmoncry
    applymovement (10, MauvilleCity_Movement_HoohToLugia)
	applymovement (OBJ_EVENT_ID_PLAYER, MauvilleCity_Movement_CameraBetweenLugiaHooh)
	waitmovement (0)
    waitse
    playmoncry (SPECIES_LUGIA, CRY_MODE_NORMAL)
    applymovement (13, MauvilleCity_Movement_LugiaFlapRight)
	waitmovement (0)
    setweather (WEATHER_RAIN)
    doweather
    waitmoncry
    delay (90)
    setmetatile (31, 11, 0x263, TRUE)
    setmetatile (33, 14, 0x209, FALSE)
    setmetatile (37, 16, 0x001, FALSE)
    setmetatile (29, 18, 0x219, FALSE)
    setmetatile (34, 20, 0x211, FALSE)
    setmetatile (37, 19, 0x209, FALSE)
    special (DrawWholeMapView)
    delay (90)
    setmetatile (30, 12, 0x26A, TRUE)
    setmetatile (29, 15, 0x001, FALSE)
    setmetatile (36, 15, 0x212, FALSE)
    setmetatile (29, 17, 0x211, FALSE)
    setmetatile (31, 17, 0x211, FALSE)
    setmetatile (33, 19, 0x211, FALSE)
    setmetatile (35, 20, 0x211, FALSE)
    setmetatile (33, 21, 0x211, FALSE)
    setmetatile (34, 22, 0x211, FALSE)
    setmetatile (29, 23, 0x121, FALSE)
    special (DrawWholeMapView)
    delay (90)
    setmetatile (30, 16, 0x209, FALSE)
    setmetatile (37, 17, 0x001, FALSE)
    setmetatile (36, 18, 0x212, FALSE)
    setmetatile (39, 19, 0x209, FALSE)
    setmetatile (32, 20, 0x210, FALSE)
    setmetatile (38, 20, 0x211, FALSE)
    setmetatile (36, 21, 0x211, FALSE)
    setmetatile (37, 21, 0x211, FALSE)
    special (DrawWholeMapView)
    delay (120)
    waitse
    playmoncry (SPECIES_HO_OH, CRY_MODE_NORMAL)
    applymovement (10, MauvilleCity_Movement_HoohFlapLeft)
	waitmovement (0)
    waitmoncry
    applymovement (10, MauvilleCity_Movement_HoohExit)
	waitmovement (0)
    removeobject (10)
    delay (30)
    applymovement (13, MauvilleCity_Movement_LugiaExit)
	waitmovement (0)
    delay (30)
    setweather (WEATHER_SUNNY)
    doweather
    delay (60)
    playbgm (MUS_HG_ECRUTEAK, TRUE)
    applymovement (OBJ_EVENT_ID_PLAYER, MauvilleCity_Movement_CameraToSilver)
	waitmovement (0)
    applymovement (11, MauvilleCity_Movement_FaceDown)
    applymovement (12, MauvilleCity_Movement_FaceDown)
	waitmovement (0)
    call (BattleFrontier_BattleDomeBattleRoom_EventScript_SetPlayerGfx)
    addobject (14)
    applymovement (14, MauvilleCity_Movement_PlayerToPlayer)
	waitmovement (0)
    removeobject (14)
    applymovement (OBJ_EVENT_ID_PLAYER, MauvilleCity_Movement_ShowPlayer)
	waitmovement (0)
    msgbox(format("DAD: I knew I could count on you, {PLAYER}.\pLucky for us, it appears that Ho-oh was calmed down by Lugia.\pMy intuition seems to have been correct, plus, you managed to find and awaken Lugia in no time!\pFeraligatr and I barely broke a sweat before you got here.\p...\pBoy, you and your brother sure have grown...\pIt's unfortunate that my duties as League Champion keep me so busy.\pSpeaking of which, you seem to be almost ready to challenge me.\pI see you only need one more badge.\pKeep it up, {PLAYER}!"))
    waitmessage
    closemessage
    playse (SE_POKENAV_CALL)
    waitse
    delay (30)
    msgbox(format("DAD: Sorry, it looks like they need me back at the POKéMON League now.\pI hope to see you again soon, {PLAYER}."))
    waitmessage
    closemessage
    applymovement (12, MauvilleCity_Movement_SilverExit)
    applymovement (11, MauvilleCity_Movement_FeraligatrExit)
	waitmovement (0)
    removeobject (11)
    removeobject (12)
    setflag (FLAG_HIDE_SILVER_ECRUTEAK)
    setflag (FLAG_HOOH_VS_LUGIA_COMPLETED)
    clearflag (FLAG_HIDE_OLIVER_TRAINER_SCHOOL)
    addvar (VAR_ECRUTEAK_STATE, 1)
    release
    end
}

movement MauvilleCity_Movement_ExclamationLookLeft {
    emote_exclamation_mark
    walk_in_place_left
    face_left
}

movement MauvilleCity_Movement_ExclamationRunAway {
    emote_exclamation_mark
    walk_in_place_up
    delay_16 * 4
    walk_down
    walk_fast_down * 6
}

movement MauvilleCity_Movement_HoOhInFrame {
    walk_down * 7
}

movement MauvilleCity_Movement_LugiaApproach {
    walk_right * 4
    face_right
}

movement MauvilleCity_Movement_HoohToLugia {
    walk_left * 2
    face_left
}

movement MauvilleCity_Movement_CameraBetweenLugiaHooh {
    walk_left * 4
}

movement MauvilleCity_Movement_LugiaFlapRight {
    walk_in_place_right * 3
}

movement MauvilleCity_Movement_HoohFlapLeft {
    walk_in_place_left * 3
}

movement MauvilleCity_Movement_HoohExit {
    walk_right
    walk_up * 6
}

movement MauvilleCity_Movement_LugiaExit {
    walk_left * 7
}

movement MauvilleCity_Movement_CameraToSilver {
    walk_right * 4
    walk_down * 4
    face_up
}

movement MauvilleCity_Movement_FaceDown {
    face_down
}

movement MauvilleCity_Movement_PlayerToPlayer {
    walk_up * 6
}

movement MauvilleCity_Movement_ShowPlayer {
    set_visible
}

movement MauvilleCity_Movement_SilverExit {
    walk_right * 2
    walk_down * 3
    walk_right * 6
}

movement MauvilleCity_Movement_FeraligatrExit {
    walk_down
    walk_right * 2
    walk_down * 3
    walk_right * 6
}

